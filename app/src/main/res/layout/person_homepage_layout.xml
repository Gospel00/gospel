<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    tools:context="com.dxc.mycollector.PersonAcitvity">

    <LinearLayout
        android:background="#378dcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp"
        >

        <ImageView
            android:id="@+id/face"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/toux"
            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:padding="2dp"
            android:text="项目经理        |        李总"
            android:background="#5aa1d5"
            android:textColor="@color/common_white"
            android:textSize="@dimen/personal_text_view1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/button1"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/celaing"/>
            <TextView
                android:id="@+id/celiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="测量"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/button2"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/datamanage"/>
            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="数据管理"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/button3"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/taskmanage"/>
            <TextView
                android:id="@+id/task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="任务管理"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/button4"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/safe_examine"/>
            <TextView
                android:id="@+id/safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="安全检查"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button5"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/addmore" />

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="添加"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="82dp"

            android:gravity="center_horizontal"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="82dp"

            android:gravity="center_horizontal"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="82dp"

            android:gravity="center_horizontal"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>