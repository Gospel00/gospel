        <item name="colorPrimary">@color/Indigo_colorPrimary</item>
        <item name="colorPrimaryDark">@color/Indigo_colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--Custom
        状态栏颜色
        <item name="colorPrimaryDark1">@color/Indigo_colorPrimaryDark</item>
          Toolbar颜色
        <item name="colorPrimary1">@color/Indigo_colorPrimary</item> -->
