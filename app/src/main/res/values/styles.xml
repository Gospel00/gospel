<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionbar_bg_color</item>
        <item name="colorPrimaryDark">@color/actionbar_bg_color</item>
        <item name="colorAccent">@color/actionbar_bg_color</item>
        <!--Custom
        状态栏颜色
        <item name="colorPrimaryDark1">@color/Indigo_colorPrimaryDark</item>
          Toolbar颜色
        <item name="colorPrimary1">@color/Indigo_colorPrimary</item> -->
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <!--ActionBar 宽度设置-->
        <item name="@android:attr/actionBarSize">35dp</item>
        <!--ActionBar title 阴影设置取消-->
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--actionbar size -->
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="height">@dimen/actionbar_height</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="ErrorStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>
